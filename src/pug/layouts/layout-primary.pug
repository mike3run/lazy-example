doctype html
html(lang='en')
  head
    block title
      title LQIP Pug Plugin
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    meta(name='theme-color', content='#3e456c')
    meta(name='description' content='Low Quality Image Placeholder for Pug')
    link(rel='icon' href='assets/images/favicon-32x32.png' type='image/png' sizes='32x32')
    link(rel='shortcut icon' href='assets/images/favicon.ico')
    if production
      // build:cssInline
      // endbuild
    else
      link(rel='stylesheet', href='assets/css/main.css')
    block head
      //- If extra head content is necessary per page, it can be added per screen

  body
    include includes/mixins
    include general/menu
    block content
      //- This gets replaced by content per page

    include general/footer
    block footer
      //- If extra footer content is necessary per page, it can be added per screen

    if production
      script(src='assets/js/main.min.js' async)
    else
      script(src='assets/js/main.js')
    block scripts
      //- Also if more scripts are needed you can hook in here <3
